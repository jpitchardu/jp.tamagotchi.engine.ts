{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "es2015",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"],
    "moduleResolution": "node",
    "baseUrl": "src/",
    "paths": {
      "@config/*": ["config/*"],
      "@engine/*": ["engine/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["./src/**/*"]
}
